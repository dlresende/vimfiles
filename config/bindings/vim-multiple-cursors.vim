" Start multicursor and add a virtual cursor + selection on the match...
let g:multi_cursor_start_word_key      = '<C-n>'

" ...jump to the next match
let g:multi_cursor_next_key            = '<C-n>'

" ...jump to the previous match
let g:multi_cursor_prev_key            = '<C-p>'

" ...skip the next match
let g:multi_cursor_skip_key            = '<C-x>'

" Start multicursor and directly select all matches
let g:multi_cursor_select_all_word_key = '<A-n>'

" Start multicursor and add a virtual cursor + selection to match without boundaries
let g:multi_cursor_start_key           = 'g<C-n>'

" Start multicursor and directly select all matche without boundariess
let g:multi_cursor_select_all_key      = 'g<A-n>'

let g:multi_cursor_quit_key            = '<Esc>'
